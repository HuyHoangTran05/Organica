{
  "version": 2,
  "builds": [
    { "src": "api/server.js", "use": "@vercel/node" },
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "assets/images/**/*", "use": "@vercel/static" },
    { "src": "assets/css/**/*", "use": "@vercel/static" },
    { "src": "assets/js/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/server.js" },
    { "src": "/(index|about|shop|blog|contact|login|signup|admin|product-details|cart|checkout|whishlist)\.html", "dest": "/$1.html" },
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/favicon\.svg", "dest": "/favicon.svg" },
    { "src": "/", "dest": "/index.html" }
  ]
}
